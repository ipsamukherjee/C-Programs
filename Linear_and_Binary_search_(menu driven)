#include<stdio.h>
#include<stdlib.h>
int linear(int arr[],int n,int x){
for(int i=0;i<n;i++){
if(arr[i]==x){
return i;}}
return -1;}

int binary(int arr[],int n,int x){
int st=0, mid,end=n-1;
while(st<=end){
mid=(st+end)/2;

if(x>arr[mid])
st=mid+1;
else if(arr[mid]==x)
return mid;

else
end=mid-1;}
return -1;
}

int main(){
int arr[100],n,choice,x,res;
printf("enter no. of elements:");
scanf("%d",&n);
printf("enter %d elements:",n);
for(int i=0;i<n;i++){
scanf("%d",&arr[i]);}
while(1){
printf("\n 1. for linear search \n 2. for binary search \n 3. for exit");
printf("\nenter your choice: ");
scanf("%d",&choice);

switch(choice){
case 1:
printf("enter element to search:");
scanf("%d",&x);
res=linear(arr,n,x);
if(res!=-1)
printf("element found");
else
printf("element not found");
break;

case 2:
printf("enter element to search:");
scanf("%d",&x);
res=binary(arr,n,x);
if(res!=-1)
printf("element found");
else
printf("element not found");
break;

case 3:
printf("\nexiting program");
exit(0);
break;

default:
printf("invalid choice");
}}
return 0;
}
