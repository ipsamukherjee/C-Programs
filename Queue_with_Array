#include<stdio.h>
#include<stdlib.h>
#define MAX 10
int arr[MAX];
int front=-1;
int rear=-1;
void enqueue(int val){
if(rear==MAX-1){
printf("queue overflow");}
else{
        if(front==-1)
        front=0;
rear++;
arr[rear]=val;
}
printf("enqueued value is: %d",arr[rear]);
}

void dequeue(){
if(front==-1 && rear==-1){
printf("queue underflow");}
else if(front==rear){
front=-1;
rear=-1;
}
else{
    printf("dequeued element is: %d", arr[front]);
front++;}
}

void display(){
if(front==-1 && rear==-1){
printf("queue underflow");}
else{
printf("queue elements are:");
for(int i=front;i<=rear;i++){
printf("%d",arr[i]);}
printf("\n");}
}

void main(){
int choice,val;
while(1){
printf("\n 1. for enqueue \n2. for dequeue \n3. for display \n4. for exit");
printf("\nenter choice:");
scanf("%d",&choice);

switch(choice){
case 1:
printf("\nenter value to be inserted:");
scanf("%d",&val);
enqueue(val);
break;

case 2:
dequeue();
break;

case 3:
display();
break;

case 4:
printf("\nexiting program");
exit(0);
break;

default:
printf("invalid choice\n");
}}
}
